<?xml version="1.0"?>

<!--
-->

<PropertyList>

 <name>Digital AP Speed Instrument</name>
 <w-base>124</w-base>
 <h-base>40</h-base>

 <params>
  <spd-disp>/autopilot/settings/speed-kt</spd-disp>
  <spd-ctrl>/autopilot/settings/speed-kt</spd-ctrl>
 </params>

 <layers>

  <layer>
   <name>background</name>
   <texture>
    <path>Aircraft/ComperSwift/Panels/Instruments/Textures/trans-yellow-bg.rgb</path>
   </texture>
    <w>124</w>
    <h>40</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>62</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 10</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>0.7</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 10</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>0.7</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Incr 1</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>+</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Decr 1</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>-</text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>14</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-20</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>Title</name>
   <type>text</type>
   <point-size>16</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>literal</type>
     <text>SPD: </text>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>24</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-10</offset>
    </transformation>
   </transformations>
  </layer>

  <layer>
   <name>AP Speed display</name>
   <type>text</type>
   <font>led</font>
   <point-size>7</point-size>
   <color>
    <red>1.0</red>
    <green>1.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>number-value</type>
     <property alias="../../../../../params/spd-disp"/>
     <format>%04.0f</format>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>75</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-6</offset>
    </transformation>
   </transformations>
  </layer>

 </layers>

 <actions>

  <action>
   <name>Minus 10</name>
   <button>0</button>
   <x>2</x>
   <y>-19</y>
   <w>14</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/spd-ctrl"/>
    <step>-10</step>
    <min>0</min>
    <max>2000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>2</x>
   <y>1</y>
   <w>14</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/spd-ctrl"/>
    <step>10</step>
    <min>0</min>
    <max>2000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Minus 1</name>
   <button>0</button>
   <x>16</x>
   <y>-19</y>
   <w>14</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/spd-ctrl"/>
    <step>-1</step>
    <min>0</min>
    <max>2000</max>
    <wrap>0</wrap>
   </binding>
  </action>

  <action>
   <name>Plus 10</name>
   <button>0</button>
   <x>16</x>
   <y>1</y>
   <w>14</w>
   <h>18</h>
   <binding>
    <command>property-adjust</command>
    <property alias="../../../../params/spd-ctrl"/>
    <step>1</step>
    <min>0</min>
    <max>2000</max>
    <wrap>0</wrap>
   </binding>
  </action>

 </actions>

</PropertyList>
