<?xml version="1.0"?>
<!--
************************************************************************
Comper Swift simulation config.

2004-01-21 Lee Elliott  leee-fgfs@spatial.freeserve.co.uk
************************************************************************
-->

<PropertyList>
 <sim>
  <flight-model>yasim</flight-model>
  <aero>ComperSwift-yasim</aero>
  <fuel-fraction>1.0</fuel-fraction>

  <description>Comper Swift</description>

  <virtual-cockpit archive="y">true</virtual-cockpit>

  <view n="0">
   <internal archive="y">true</internal>
   <config>
    <x-offset-m archive="y">0.0</x-offset-m>
    <y-offset-m archive="y">0.32</y-offset-m>
    <z-offset-m archive="y">2.60</z-offset-m>
    <pitch-offset-deg>0</pitch-offset-deg>
    <default-field-of-view-deg>55</default-field-of-view-deg>
   </config>
  </view>

<!-- Shift the camera target point back -->
  <view n="1">
   <config>
    <target-z-offset-m archive="y" type="double">2.0</target-z-offset-m>
   </config>
  </view>

  <view n="2">
   <config>
    <x-offset-m archive="y" type="double">2.2</x-offset-m>
    <target-z-offset-m archive="y" type="double">2.0</target-z-offset-m>
   </config>
  </view>

  <view n="5">
   <config>
    <target-z-offset-m archive="y" type="double">2.0</target-z-offset-m>
   </config>
  </view>

  <current-view>
    <field-of-view>55.0</field-of-view>
  </current-view>

  <sound>
   <path>Aircraft/c172/c172-sound.xml</path>
  </sound>

  <panel>
   <path>Aircraft/c172/Panels/c172-vfr-panel.xml</path>
  </panel>
  <panel_2>
   <path>Aircraft/ComperSwift/Panels/ComperSwift-mini-panel.xml</path>
  </panel_2>

  <hud>
   <path>Aircraft/ComperSwift/Huds/ComperSwift-hud1.xml</path>
   <visibility>true</visibility>
  </hud>

  <model>
   <path>Aircraft/ComperSwift/Models/ComperSwift-model.xml</path>
  </model>

  <systems>
   <electrical>
    <path>Aircraft/ComperSwift/Systems/ComperSwift-electrical.xml</path>
   </electrical>
  </systems>

  <chase-distance-m type="double" archive="y">-13.5</chase-distance-m>

 </sim>

 <input>

  <keyboard>

   <key n="91">
    <name>[</name>
    <desc>Adjust view left</desc>
    <binding>
      <command>property-adjust</command>
      <property>/sim/current-view/x-offset-m</property>
      <step type="double">-0.1</step>
      <min type="double">-0.2</min>
      <max type="double">0.21</max>
      <wrap type="bool">true</wrap>
    </binding>
   </key>

  <key n="93">
   <name>]</name>
   <desc>Adjust view right</desc>
   <binding>
     <command>property-adjust</command>
     <property>/sim/current-view/x-offset-m</property>
     <step type="double">0.1</step>
     <min type="double">-0.2</min>
     <max type="double">0.21</max>
     <wrap type="bool">true</wrap>
   </binding>
  </key>

 </keyboard>

</input>

 <autopilot>
   <config>

     <min-climb-speed-kt type="float">43.0</min-climb-speed-kt>
     <best-climb-speed-kt type="float">75.0</best-climb-speed-kt>

     <target-climb-rate-fpm type="float">1000.0</target-climb-rate-fpm>
     <target-descent-rate-fpm type="float">800.0</target-descent-rate-fpm>

     <elevator-adj-factor type="float">1600.0</elevator-adj-factor>
     <terrain-follow-factor type="float">16.0</terrain-follow-factor>

     <integral-contribution type="float">0.005</integral-contribution>

     <max-aileron type="float">0.4</max-aileron>
     <max-roll-deg type="float">40.0</max-roll-deg>

     <roll-out-deg type="float">12.0</roll-out-deg>
     <roll-out-smooth-deg type="float">20.0</roll-out-smooth-deg>

     <zero-pitch-throttle type="float">0.87</zero-pitch-throttle>
     <zero-pitch-trim-full-throttle type="float">0.001</zero-pitch-trim-full-throttle>

     <throttle-adj-factor type="float">2000.0</throttle-adj-factor>

   </config>

   <settings>
    <speed-kt type="double">100.0</speed-kt>
   </settings>

 </autopilot>

 <engines>
  <engine>
   <rpm type="double">0.1</rpm>
  </engine>
 </engines>

 <controls>
  <engines>
   <engine n="0">
    <ignition type="int">1</ignition>
    <magnetos type="int">1</magnetos>
    <mixture type="double">0.05</mixture>
   </engine>
  </engines>

  <flight>
   <aileron-trim type="double">0.038</aileron-trim>
   <rudder-trim type="double">0.0088</rudder-trim>
  </flight>

  <gear>
   <brake-parking type="double">0.1</brake-parking>
   <tailwheel-lock type="bool">true</tailwheel-lock>
  </gear>

 </controls>

</PropertyList>
